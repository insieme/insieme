DERIVED_OP(Bool, LAnd, "bool_and", "(a : bool, b : ()=>bool)->bool { if (a) { return b(); } return false; }")
DERIVED_OP(Bool, LOr,  "bool_or",  "(a : bool, b : ()=>bool)->bool { if (a) { return true; } return b(); }")

