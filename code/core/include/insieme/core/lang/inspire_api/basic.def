// Operators ----------------------------------------------------------------------------------------------------------

// binary
OPERATOR(Add,    "+")  //  0
OPERATOR(Sub,    "-")  //  1
OPERATOR(Mul,    "*")  //  2
OPERATOR(Div,    "/")  //  3
OPERATOR(Mod,    "%")  //  4
OPERATOR(And,    "&")  //  5
OPERATOR(Or,     "|")  //  6
OPERATOR(Xor,    "^")  //  7
OPERATOR(LShift, "<<") //  8
OPERATOR(RShift, ">>") //  9

// unary
OPERATOR(Not,   "~") // 10
OPERATOR(Plus,  "+") // 11
OPERATOR(Minus, "-") // 12

OPERATOR(PreInc,  "++") // 13
OPERATOR(PostInc, "++") // 14
OPERATOR(PreDec,  "--") // 15
OPERATOR(PostDec, "--") // 16

// logical
OPERATOR(LAnd, "&&") // 17
OPERATOR(LOr,  "||") // 18
OPERATOR(LNot, "!")  // 19
OPERATOR(Eq,   "==") // 20
OPERATOR(Ne,   "!=") // 21
OPERATOR(Lt,   "<")  // 22
OPERATOR(Le,   "<=") // 23
OPERATOR(Gt,   ">")  // 24
OPERATOR(Ge,   ">=") // 25

