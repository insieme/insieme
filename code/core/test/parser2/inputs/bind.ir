
let int = int<4>;

unit main() {
	
	// let's define some function sum
	let sum = (int a, int b)->int { return a + b; };
	
	// define a variable
	ref<int> a  = var(0);
	
	auto acc = (int v)=>{ a = a + v; };
	
	let doSomething = ((int)=>unit fun)->unit {
		fun(4);
	};

	print("a = %d\n", *a);
	acc(3);
	print("a = %d\n", *a);
	acc(2);
	print("a = %d\n", *a);

	doSomething(acc);
	print("a = %d\n", *a);
	
}