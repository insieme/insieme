
alias int = int<4>;

def sum = (n : int)->int {
	var ref<int> sum = ref_var(0);
	for(int i=0..n+1) {
		sum = sum + i;
	}
	return *sum;
};

unit main() {

	// use summation function
	print("Sum: %d\n", sum(100));

	// use function pointer
	auto ptr = sum;
	print("Sum: %d\n", ptr(100));

	// using lambda
	auto lsum = (n : int)->int { return sum(n); };
	print("Sum: %d\n", lsum(100));

	// compute it inline
	var ref<int> sum = ref_var(0);
	for(int i=0..101) {
		sum = sum + i;
	}

	print("Sum: %d\n", *sum);
}
