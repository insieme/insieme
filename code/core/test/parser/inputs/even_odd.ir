
alias int = int<4>;

decl even : (int)->bool;
decl odd : (int)->bool;
def even :  (n : int)->bool { if (n == 0) { return true; } return odd(n-1); };
def odd : (n : int)->bool { if (n == 0) { return false; } return even(n-1); };

unit main() {

	print("Even: %d\n", even(50));
	print("Odd:  %d\n", odd(50));
	
}
