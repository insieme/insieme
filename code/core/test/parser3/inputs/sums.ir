
let int = int<4>;

let sum = lambda (int n)->int {
	decl ref<int> sum = var(0);
	for(int i=0..n+1) {
		sum = sum + i;
	}
	return *sum;
};

unit main() {

	// use summation function
	print("Sum: %d\n", sum(100));

	// use function pointer
	decl auto ptr = sum;
	print("Sum: %d\n", ptr(100));

	// using lambda
	decl auto lsum = lambda (int n)->int { return sum(n); };
	print("Sum: %d\n", lsum(100));

	// compute it inline
	decl ref<int> sum = var(0);
	for(int i=0..101) {
		sum = sum + i;
	}

	print("Sum: %d\n", *sum);
}
