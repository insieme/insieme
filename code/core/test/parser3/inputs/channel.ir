	// check creation
	decl auto c = channel_create(type(int),param(1));
	
	// check assignment
	decl channel c2 = c;
	
	// try sending stuff
	channel_send(c, 12);
	
	// try receiving stuff
	decl auto v = channel_recv(c);
	
	// check empty
	if (channel_empty(c)) {};
	
	// and release
	channel_release(c);
		
