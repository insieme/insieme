
let int = int<4>;
let uint = uint<4>;

let double = real<8>;

let matrix = array<array<double,100>,100>;

let initUniform = lambda ('elem elem, type<'a> size) -> array<'elem,'a>{
					decl ref<array<'elem,'a>> res;
					for(int i=0 .. 100) {
						res[i] = elem;
					}
					return *res;
                  };



int main() {

	// create matrices
	decl ref<matrix> a = var(initUniform(initUniform(0.0,param(100)),param(100)));
	decl ref<matrix> b = var(initUniform(initUniform(0.0,param(100)),param(100)));
	decl ref<matrix> c = var(initUniform(initUniform(0.0,param(100)),param(100)));
	
	// initialize a and b
	for(uint i= 0u .. 100u) {
		for(uint j= 0u .. 100u) {
			if (i == j) {
				a[i][j] = 1.0;
			} else {
				a[i][j] = 0.0;
			}
			b[i][j] = 2.0;
		}
	}
	
	
	// muliply a and b => c
	for(uint i = 0u .. 100u) {
		for(uint j = 0u .. 100u) {
			c[i][j] = 0.0;
			for(uint k = 0u .. 100u) {
				c[i][j] = c[i][j] + a[i][k] * b[i][j];
			}
		}
	}
	
	// check results		
	decl ref<bool> success = var(true);
	for(uint i = 0u .. 100u) {
		for(uint j = 0u .. 100u) {
			success = success && c[i][j] == 2.0;
		}
	}
	
	// print verification check result
	if (!success) {
		print("Fail\n");
		return 1;
	}
	print("OK\n");
	return 0;
}
